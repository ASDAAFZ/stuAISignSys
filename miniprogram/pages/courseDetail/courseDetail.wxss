page {
  height: 100%;
}
.courseInfo{
  opacity: 0.53;
  font-family:MicroSoft YaHei;
  color: #125488;
  padding: 1em
}

.wrapper {
    padding-bottom: 90px;
}

.div-transparent:before {
    content: "";
    position: absolute;
    top: 0;
    left: 10%;
    right: 10%;
    width: 80%;
    height: 1px;
    background-image: linear-gradient(to right, transparent, darkgrey, transparent);
}

.div-dot:after {
    content: "";
    position: absolute;
    z-index: 1;
    top: -9px;
    left: calc(50% - 9px);
    width: 18px;
    height: 18px;
    background-color: rgb(194, 154, 54);
    border: 1px solid darkgrey;
    border-radius: 50%;
    box-shadow: inset 0 0 0 2px white, 0 0 0 4px white;
}

.divider {
    position: relative;
    margin-top: 40rpx;
    height: 1px;
}

.couresehead{

  font: bolder;
  margin-left:1em;
  color: #083560;
}

.background {
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
}

